NEI<-readRDS("summarySCC_PM25.rds")
SCC <- readRDS("Source_Classification_Code.rds")
PMTotalByYear<-aggregate(NEI$Emissions,list(NEI$year),sum)
png("Plot1.png")
barplot(PMTotalByYear$x,PMTotalByYear$Group.1,names.arg=c("1999","2002","2005","2008"),main="PM2.5 Emissions by Year",xlab="years", ylab=expression('total PM'[2.5]*' emission'))
dev.off()
